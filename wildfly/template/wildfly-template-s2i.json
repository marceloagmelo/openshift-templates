{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "wildfly-template",
        "annotations": {
            "description": "Template para deploy Wildfly.",
            "iconClass": "icon-wildfly",
            "tags": "wildfly,runtime"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {
                    "app_name": "${APP_NAME}",
                    "technology": "${TECNOLOGY}"
                },
                "name": "${APP_NAME}"
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "nodePort": 0,
                        "port": 8080,
                        "protocol": "TCP",
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app_name": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Route",
            "metadata": {
                "labels": {
                    "app_name": "${APP_NAME}"
                },
                "annotations": {
                    "haproxy.router.openshift.io/balance": "roundrobin"
                },
                "name": "vs-${APP_NAME}"
            },
            "spec": {
                "host": "${HOSTNAME_APP}",
                "path": "${CONTEXT_APP}",
                "tls": {
                    "termination": "edge"
                },
                "to": {
                    "kind": "Service",
                    "name": "${APP_NAME}"
                },
                "port": {
                    "targetPort": "8080-tcp"
                }
            },
            "status": {}
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app_name": "${APP_NAME}",
                    "technology": "${TECNOLOGY}"
                },
                "annotations": {
                    "description": "Mantém o controle de alterações da imagem da aplicação"
                }
            }
        },
        {
          "kind": "BuildConfig",
          "apiVersion": "v1",
          "metadata": {
            "name": "${APP_NAME}-pipeline",
            "labels": {
                "app_name": "${APP_NAME}"
            },
            "annotations": {
              "description": "Define o pipeline de build da imagem"
            }
          },
          "spec": {
            "strategy": {
                "type": "JenkinsPipeline",
                "jenkinsPipelineStrategy": {
                    "jenkinsfile": "try {\n   timeout(time: 20, unit: 'MINUTES') {\n      node('nodejs') {\n          stage('build') {\n            openshiftBuild(buildConfig: '${APP_NAME}', showBuildLogs: 'true')\n          }\n          stage('deploy') {\n            openshiftDeploy(deploymentConfig: '${APP_NAME}')\n          }\n        }\n   }\n} catch (err) {\n   echo \"in catch block\"\n   echo \"Caught: ${err}\"\n   currentBuild.result = 'FAILURE'\n   throw err\n}"
                }
            },
            "output": {},
            "triggers": [
              {
                "type": "GitHub",
                "github": {
                  "secret": "${GITHUB_WEBHOOK_SECRET}"
                }
              },
              {
                "type": "Generic",
                "generic": {
                  "secret": "${GENERIC_WEBHOOK_SECRET}"
                }
              }
            ]
          }
        },
        {
          "kind": "BuildConfig",
          "apiVersion": "v1",
          "metadata": {
            "name": "${APP_NAME}",
            "labels": {
                "app_name": "${APP_NAME}"
            },
            "annotations": {
              "description": "Define o build da aplicação"
            }
          },
          "spec": {
            "source": {
              "type": "Git",
              "git": {
                "uri": "${SOURCE_REPOSITORY_URL}",
                "ref": "${SOURCE_REPOSITORY_REF}"
              },
              "contextDir": "${CONTEXT_DIR}",
              "sourceSecret": {
                "name": "git-${APP_NAME}-secret"
              }
            },
            "strategy": {
              "type": "Source",
              "sourceStrategy": {
                "from": {
                  "kind": "ImageStreamTag",
                  "namespace": "${NAMESPACE}",
                  "name": "${IMAGE_NAME}:${IMAGE_TAG}"
                },
                "env": [
                  {
                     "name": "http_proxy",
                     "value": "${http_proxy}"
                  },
                  {
                     "name": "https_proxy",
                     "value": "${https_proxy}"
                  }
                ]
              }
            },
            "output": {
              "to": {
                "kind": "ImageStreamTag",
                "name": "${APP_NAME}:latest"
              }
            },
            "triggers": [
              {
                "type": "ImageChange"
              },
              {
                "type": "ConfigChange"
              },
              {
                "type": "GitHub",
                "github": {
                  "secret": "${GITHUB_WEBHOOK_SECRET}"
                }
              },
              {
                "type": "Generic",
                "generic": {
                  "secret": "${GENERIC_WEBHOOK_SECRET}"
                }
              }
            ]
          }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "labels": {
                    "app_name": "${APP_NAME}",
                    "technology": "${TECNOLOGY}"
                },
                "name": "${APP_NAME}"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "app_name": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "strategy": {
                    "resources": {},
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "triggers": [
                  {
                    "type": "ImageChange",
                    "imageChangeParams": {
                      "automatic": true,
                      "containerNames": [
                        "${APP_NAME}"
                      ],
                      "from": { 
                        "kind": "ImageStream",
                        "name": "${APP_NAME}:latest"
                      }
                    }
                  }
                ],
                "template": {
                    "metadata": {
                        "labels": {
                            "app_name": "${APP_NAME}",
                            "deploymentconfig": "${APP_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "APP_NAME",
                                        "value": "${APP_NAME}"
                                    },
                                    {
                                        "name": "PBD_URL",
                                        "value": "${PBD_URL}"
                                    },
                                    {
                                        "name": "JAVA_OPTS_EXT",
                                        "value": "${JAVA_OPTS_EXT}"
                                    },
                                    {
                                        "name": "JAVA_PARAMETERS",
                                        "value": "${JAVA_PARAMETERS}"
                                    },
                                    {
                                        "name": "PROJECT_NAME",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "fieldPath": "metadata.namespace"
                                            }
                                        }
                                    },
                                    {
                                        "name": "TZ",
                                        "value": "${TZ}"
                                    },
                                    {
                                        "name": "WILY_MOM_FQDN",
                                        "value": "${WILY_MOM_FQDN}"
                                    },
                                    {
                                        "name": "WILY_MOM_PORT",
                                        "value": "${WILY_MOM_PORT}"
                                    },
                                    {
                                        "name": "http_proxy",
                                        "value": "${http_proxy}"
                                    },
                                    {
                                        "name": "https_proxy",
                                        "value": "${https_proxy}"
                                    },
                                    {
                                        "name": "no_proxy",
                                        "value": "*.corp"
                                    }
                                ],
                                "image": "",
                                "imagePullPolicy": "IfNotPresent",
                                "name": "${APP_NAME}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                  "timeoutSeconds": 3,
                                  "initialDelaySeconds": 30,
                                  "httpGet": {
                                    "path": "/",
                                    "port": 8080
                                  }
                                },
                                "livenessProbe": {
                                    "timeoutSeconds": 3,
                                    "initialDelaySeconds": 30,
                                    "httpGet": {
                                        "path": "/",
                                        "port": 8080
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "${POD_MAX_MEM}M"
                                    },
                                    "request": {
                                        "memory": "${POD_MAX_MEM}M"
                                    }
                                },
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/opt/metadata",
                                        "name": "podinfo",
                                        "readOnly": false
                                    }
                                ]
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "volumes": [
                            {
                                "metadata": {
                                    "items": [
                                        {
                                            "fieldRef": {
                                                "fieldPath": "metadata.labels"
                                            },
                                            "name": "labels"
                                        },
                                        {
                                            "fieldRef": {
                                                "fieldPath": "metadata.annotations"
                                            },
                                            "name": "annotations"
                                        }
                                    ]
                                },
                                "name": "podinfo"
                            }
                        ]
                    }
                }
            },
            "status": {}
        }
    ],
    "parameters": [
        {
            "name": "TECNOLOGY",
            "displayName": "Nome da tecnologia.",
            "description": "Nome da tecnologia.",
            "value": "${TECNOLOGY}",
            "required": true
        },
        {
            "name": "APP_NAME",
            "displayName": "Nome da aplicação.",
            "description": "Nome da aplicação.",
            "required": true
        },
        {
            "name": "IMAGE_NAME",
            "displayName": "Nome da imagem.",
            "description": "Nome da imagem.",
            "value": "${IMAGE_NAME}",
            "required": true
        },
        {
            "name": "IMAGE_TAG",
            "displayName": "Tag da imagem.",
            "description": "Tag da imagem.",
            "value": "latest",
            "required": true
        },
        {
            "name": "NAMESPACE",
            "displayName": "Namespace.",
            "description": "Namespace.",
            "value": "opennshift",
            "required": true
        },
        {
          "name": "SOURCE_REPOSITORY_URL",
          "displayName": "URL de repositório do GIT.",
          "description": "URL de repositório do GIT com o código da aplicação."
        },
        {
          "name": "SOURCE_REPOSITORY_REF",
          "displayName": "Branch.",
          "description": "Nome do branch , se for vazio o defaul é master.",
          "value": "master"
        },
        {
          "name": "CONTEXT_DIR",
          "displayName": "Diretório da aplicação no git.",
          "description": "Diretório da aplicação no git."
        },
        {
          "name": "GITHUB_WEBHOOK_SECRET",
          "displayName": "Secret do webhook do GIT.",
          "description": "Secret para configurar o webhook do GIT.",
          "generate": "expression",
          "from": "[a-zA-Z0-9]{40}"
        },
        {
          "name": "GENERIC_WEBHOOK_SECRET",
          "displayName": "Secret genérica do webhook.",
          "description": "Secret genérica para configurar o webhook.",
          "generate": "expression",
          "from": "[a-zA-Z0-9]{40}"
        },        
        {
            "name": "HOSTNAME_APP",
            "displayName": "Hostname da aplicação.",
            "description": "Hostname da aplicação."
        },
        {
            "name": "CONTEXT_APP",
            "displayName": "Contexto da aplicação.",
            "description": "Contexto da aplicação."
        },
        {
            "name": "JAVA_OPTS_EXT",
            "displayName": "JVM options",
            "description": "Java options",
            "value": "-Djava.security.egd=file:/dev/./urandom -Dfile.encoding=UTF8 -Djava.net.preferIPv4Stack=true"
        },
        {
            "name": "JAVA_PARAMETERS",
            "displayName": "JVM parâmetros da aplicação.",
            "description": "JVM parâmetros da aplicação."
        },
        {
            "name": "POD_MIN_MEM",
            "displayName": "Quantidade mínima de memória no PODs",
            "description": "Quantidade mínima de memória nos PODs (in Megabytes)",
            "value": "512"
        },        
        {
            "name": "POD_MAX_MEM",
            "displayName": "Quantidade máxima de memória no PODs",
            "description": "Quantidade máxima de memória nos PODs (in Megabytes)",
            "value": "1024"
        },
        {
            "name": "http_proxy",
            "displayName": "http_proxy",
            "description": "Http Proxy environment variable. http://user:pass@ip:port",
            "value": "http://proxyapp.santanderbr.corp:80"
        },
        {
            "name": "https_proxy",
            "displayName": "https_proxy",
            "description": "Https Proxy environment variable. http://user:pass@ip:port",
            "value": "http://http://proxyapp.santanderbr.corp:80"
        },
        {
            "name": "TZ",
            "displayName": "TimeZone",
            "description": "TimeZone for the running containers.",
            "value": "America/Sao_Paulo"
        }
    ]
}
